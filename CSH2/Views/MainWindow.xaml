<Window x:Class="CSH2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSH2"
        xmlns:vm="clr-namespace:CSH2.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowModel></vm:MainWindowModel>
    </Window.DataContext>

    <StackPanel HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top">
        <Button Content="Выбрать файлы" Click="Button_Click"/>
        <DataGrid Name="PathsList" ItemsSource="{Binding  Paths, Mode=OneWay}" AutoGenerateColumns="False" HeadersVisibility="None">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Mode=OneWay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Запуск" Command="{Binding Start, Mode=OneWay}" />
        <DataGrid ItemsSource="{Binding SummaryTable, IsAsync=True, Mode=OneWay}" MinColumnWidth="200" CanUserAddRows="False" VerticalScrollBarVisibility="Visible" />
    </StackPanel>

</Window>
